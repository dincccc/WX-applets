/* pages/chanIndex/chanIndex.wxss */
/* @import "../../style/somefont.wxss";  导入图标字体样式 使用search图标 */
/* 搜索栏 */
.search-bar{ /*搜索模块*/
  display: flex;
  justify-content: center;
  align-items: center;

  width: 92%;
  margin: 20rpx 0;
  color: #c4c4c4;
  border: 1rpx solid #c4c4c4;
  border-radius: 8rpx;
  
}
.search-icon { /*放大镜图标*/
  margin-left: 20rpx;
}
.search-input { /*搜索输入框*/
  width: 100%;
  padding: 14rpx 0;
  font-size: 24rpx;
}

/* 轮播banner样式 */
.carousel{
  /*为 swiper 设置宽高*/
  width: 100%;
  height: 430rpx;
}

.carousel swiper-item navigator image{
  /*为 swiper-item 内的图片设置宽高 */
  width: 100%;
  height: 430rpx;
}

/* 四个版块入口 */
.section-entry {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 40rpx;
  width: 100%;
}
.section-item {
  width: 80rpx;
  /* height: 90rpx; */
  text-align: center;
  font-size: .6rem;
}
.section-item image {
  width: 80rpx;
  height: 80rpx;
}
