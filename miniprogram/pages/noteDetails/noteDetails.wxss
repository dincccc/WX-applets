/* pages/noteDetails/noteDetails.wxss */
@import "../templates/noteRecords";

.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx auto;
  margin-bottom: 20rpx;
  padding: 4rpx 10rpx;
  width: 90%;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-shadow: inset 0rpx 0rpx 6rpx rgb(145, 143, 143);
  
}

.search-input {
  margin-left: 10rpx;
  width: 96%;
  font-size: 0.7rem;
}

.swiper-item {
  background: #cdd;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

.video-bar {
  width: 88%;
  margin: 20rpx auto;
}

.video-bar-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 1rem;
  margin-bottom: 10rpx;
}
.video-bar-title view{
  display: flex;
  align-items: center;
}

scroll-view {
  white-space: nowrap;
  overflow: hidden;
}

::-webkit-scrollbar {
  height: 0;
  width: 0;
  color: transparent;
}

